{
	"name": "telegraf-inline-menu",
	"version": "5.0.0-beta.5",
	"description": "Inline Menus for Telegraf made simple.",
	"main": "dist/source",
	"types": "dist/source",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"build": "del dist && tsc",
		"prepack": "npm run build",
		"preexample-js": "npm run build",
		"example-js": "node examples/main-javascript.js",
		"start": "ts-node examples/main-typescript.ts",
		"test": "tsc && xo && nyc ava"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/EdJoPaTo/telegraf-inline-menu.git"
	},
	"keywords": [
		"Telegraf",
		"Telegram"
	],
	"author": "Edgar To",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/EdJoPaTo/telegraf-inline-menu/issues"
	},
	"homepage": "https://github.com/EdJoPaTo/telegraf-inline-menu#readme",
	"dependencies": {},
	"peerDependencies": {
		"telegraf": "^3.38.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/node": "^14.0.4",
		"ava": "^3.6.0",
		"del-cli": "^3.0.0",
		"nyc": "^15.0.0",
		"telegraf": "^3.38.0",
		"telegram-typings": "^4.0.0-beta",
		"ts-node": "^8.0.2",
		"typescript": "^3.7.4",
		"xo": "^0.32.0"
	},
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"nyc": {
		"all": true,
		"extension": [
			".ts"
		],
		"include": [
			"dist/source",
			"source"
		],
		"exclude": [
			"**/*.d.ts",
			"**/*.test.ts"
		],
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"semicolon": false,
		"rules": {
			"@typescript-eslint/prefer-readonly-parameter-types": "error",
			"ava/no-ignored-test-files": "off"
		},
		"overrides": [
			{
				"files": [
					"examples/**/*.ts",
					"source/**/*.test.ts",
					"test/**/*.ts"
				],
				"rules": {
					"@typescript-eslint/prefer-readonly-parameter-types": "off"
				}
			}
		]
	}
}
